@model DenemeDate.Models.Users

@{
    ViewData["Title"] = "Index";
}
@section Header{
    <link href="~/bootstrap-datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet" />
    <script src="~/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="~/bootstrap-datepicker/locales/bootstrap-datepicker.tr.min.js"></script>
}


<form asp-action="Index">
    <div class="form-group">
        <div class="input-group date" data-provide="datepicker">
            <label asp-for="CreatedDate" class="control-label" id="startTime"></label>
            <input asp-for="CreatedDate" class="form-control" />
        </div>
        <div class="input-group date" data-provide="datepicker">
            <label asp-for="CreatedDate" class="control-label" id="endTime"></label>
            <input asp-for="CreatedDate" class="form-control" />
        </div>
    </div>


</form>

<input type="submit" value="submit" />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>

        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
<script>
    $(function ()){
        $('.datepicker').datepicker({
            dateFormat: "dd/mm/yyyy"
        });
    }
</script>